{% extends 'base.html.twig' %}



{% block title %}User list{% endblock %}
{% block head %} 
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}
{% block body %}


    <style>
        h1{
            text-align: center;
        }
    </style>

    <div class="container">
        <div Class="row justify-content-center" style = "margin-top : 20px;">
            <h1>Liste des utilisateurs du site</h1>
            <table Class="table table-bordered" style="margin-top: 20px;">
                <thead class="thead-dark" style="text-align: center;">
                <tr>
                    <th> Prénom </th>
                    <th> Nom </th>
                    <th> Email </th>
                    <th> Tag </th>
                    <th> Numéro de téléphone </th>
                    <th> Actions </th>
                    <!--  <th colspan="3"> Action</th> -->
                </tr>
                </thead>
                {# légèrement différent de php avec foreach userList as user #}
                {% for user in user_list %}
                    <tr style = "text-align: center;">
                        <td>{{ user.firstName }} </td>
                        <td>{{  user.lastName|upper }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.tag }}</td>
                        <td>0{{ user.phoneNumber }}</td>
                        <td> 
                            <a href="#" class = "btn btn-primary"><i class="fa fa-pencil" aria-hidden="true"></i></a> 
                            <a href="#" class = "btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i></a> 
                        </td>
                    </tr>
                {% endfor %}
            </table>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('user-create') }}"> Créer un nouvel utilisateur </a>
            {% endif %}
        </div>
    </div>
{% endblock %}